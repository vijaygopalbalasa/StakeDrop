{
  "name": "stakedrop",
  "version": "1.0.0",
  "description": "No-loss lottery protocol on Cardano + Midnight Network",
  "private": true,
  "workspaces": [
    "frontend",
    "bridge",
    "midnight",
    "scripts"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "bridge": "npm run start --workspace=bridge",
    "demo": "cd scripts && npx ts-node demo.ts",
    "setup": "bash scripts/setup.sh",
    "install:all": "npm install && cd frontend && npm install && cd ../bridge && npm install",
    "compile:cardano": "cd contracts/cardano && aiken build"
  },
  "keywords": [
    "cardano",
    "midnight",
    "zk",
    "no-loss-lottery",
    "defi",
    "staking"
  ],
  "author": "StakeDrop Team",
  "license": "MIT",
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}
