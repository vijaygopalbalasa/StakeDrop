{
  "name": "stakedrop",
  "version": "1.0.0",
  "description": "No-loss lottery protocol on Cardano + Midnight Network",
  "private": true,
  "workspaces": [
    "frontend",
    "bridge",
    "midnight"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
