# StakeDrop Frontend Configuration
# Copy this file to .env.local and update values

# =============================================================================
# CARDANO NETWORK CONFIGURATION
# =============================================================================

# Network: preview, preprod, or mainnet
NEXT_PUBLIC_CARDANO_NETWORK=preview

# Blockfrost API Key (get from https://blockfrost.io)
# You need a key for each network you want to support
NEXT_PUBLIC_BLOCKFROST_PROJECT_ID=your_preview_api_key

# =============================================================================
# CONTRACT ADDRESSES (Updated after deployment)
# =============================================================================

# Pool validator hash (from plutus.json after aiken build)
NEXT_PUBLIC_POOL_VALIDATOR_HASH=b70f951d843a747f8a41e81aaa107a5f427b8e4a8b2124048e9030c7

# Pool script addresses per network
# These are derived from the validator hash - update after deployment
NEXT_PUBLIC_POOL_SCRIPT_ADDRESS_PREVIEW=addr_test1wzmslj5wvgs6jr039puqx42qfa06snu3j29cvyjpywjqc8sr9kww5
NEXT_PUBLIC_POOL_SCRIPT_ADDRESS_PREPROD=addr_test1wzmslj5wvgs6jr039puqx42qfa06snu3j29cvyjpywjqc8sr9kww5
NEXT_PUBLIC_POOL_SCRIPT_ADDRESS_MAINNET=

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================

# Admin wallet address (for admin-only operations UI)
NEXT_PUBLIC_ADMIN_ADDRESS=

# =============================================================================
# MIDNIGHT NETWORK CONFIGURATION
# =============================================================================

# Enable/disable Midnight integration
NEXT_PUBLIC_MIDNIGHT_ENABLED=false

# Midnight proof server URL (local or remote)
NEXT_PUBLIC_MIDNIGHT_PROOF_SERVER=http://localhost:6300

# Midnight indexer URL
NEXT_PUBLIC_MIDNIGHT_INDEXER=http://localhost:8088

# Midnight node URL
NEXT_PUBLIC_MIDNIGHT_NODE=http://localhost:9933

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Demo mode: enables simulated proofs when Midnight is unavailable
NEXT_PUBLIC_DEMO_MODE=true

# Debug mode: enables additional logging
NEXT_PUBLIC_DEBUG_MODE=false

# =============================================================================
# POOL CONFIGURATION
# =============================================================================

# Minimum deposit in ADA
NEXT_PUBLIC_MIN_DEPOSIT_ADA=10

# Epoch duration in days
NEXT_PUBLIC_EPOCH_DURATION_DAYS=7
