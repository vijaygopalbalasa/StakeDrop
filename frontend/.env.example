# StakeDrop Frontend Configuration
# Copy this file to .env.local and update values

# Cardano Network (preview, preprod, mainnet)
NEXT_PUBLIC_NETWORK=preview

# Blockfrost API Key (get from https://blockfrost.io)
NEXT_PUBLIC_BLOCKFROST_API_KEY=your_blockfrost_api_key_here

# Midnight Network
NEXT_PUBLIC_MIDNIGHT_NETWORK_URL=http://localhost:6300

# Pool Validator Address (generated after Aiken build)
NEXT_PUBLIC_POOL_VALIDATOR_ADDRESS=

# Midnight Contract Address
NEXT_PUBLIC_MIDNIGHT_CONTRACT_ADDRESS=
